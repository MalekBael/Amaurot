<Window x:Class="map_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:map_editor"
        mc:Ignorable="d"
        Title="FFXIV Map Editor" Height="1000" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="_File">
                <MenuItem Header="_Load FFXIV Data..." Click="LoadGameData_Click"/>
                <Separator/>
                <MenuItem Header="E_xit"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Territory List -->
            <!-- Territory List -->
            <DockPanel Grid.Column="0">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Territories" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Name="TerritoryCountText" Text="(0)" Margin="5,0,0,0" Foreground="Gray" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBox DockPanel.Dock="Top" Name="TerritorySearchBox" Margin="5,0,5,5" 
                         Text="" TextChanged="TerritorySearchBox_TextChanged"
                         Background="White" BorderThickness="1" BorderBrush="Gray"
                         ToolTip="Search territories by name or ID"/>
                <!-- Add checkbox for hiding duplicates -->
                <CheckBox DockPanel.Dock="Top" x:Name="HideDuplicateTerritoriesCheckBox" 
                          Content="Hide duplicate IDs" Margin="5,0,5,5" 
                          IsChecked="False" Checked="HideDuplicateTerritoriesCheckBox_Changed" 
                          Unchecked="HideDuplicateTerritoriesCheckBox_Changed"
                          ToolTip="Hide territories with duplicate territory IDs, keeping only the first occurrence"/>
                <ListBox Name="TerritoryList" 
                         SelectionChanged="TerritoryList_SelectionChanged"
                         Margin="5,0,5,5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>

            <!-- Map Display Area -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- Map Canvas with Overlay - Using Grid to stack them perfectly -->
                <Border Grid.Row="0" Background="LightGray" Margin="5">
                    <Grid ClipToBounds="True">
                        <!-- Map Canvas - Bottom Layer -->
                        <Canvas x:Name="MapCanvas" Background="White"
                                MouseWheel="MapCanvas_MouseWheel" 
                                MouseLeftButtonDown="MapCanvas_MouseLeftButtonDown"
                                MouseLeftButtonUp="MapCanvas_MouseLeftButtonUp"
                                MouseRightButtonDown="MapCanvas_MouseRightButtonDown"
                                MouseMove="MapCanvas_MouseMove">

                            <!-- Image must be the first element to be drawn behind everything else -->
                            <Image x:Name="MapImageControl" 
                                   Canvas.Left="0" Canvas.Top="0"
                                   RenderTransformOrigin="0,0">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                        <TranslateTransform X="0" Y="0" />
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>

                            <!-- Placeholder text for when no map is selected -->
                            <TextBlock Text="Select a territory to view its map" 
                                       Canvas.Left="10" Canvas.Top="10"
                                       Foreground="Gray"
                                       x:Name="MapPlaceholderText"/>
                        </Canvas>

                        <!-- Overlay Canvas - Top Layer for Markers -->
                        <Canvas x:Name="OverlayCanvas" 
                                Background="Transparent" 
                                IsHitTestVisible="False"
                                RenderTransformOrigin="0,0">
                            <Canvas.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                    <TranslateTransform X="0" Y="0" />
                                </TransformGroup>
                            </Canvas.RenderTransform>
                        </Canvas>
                    </Grid>
                </Border>

                <!-- Map Info Panel -->
                <GroupBox Grid.Row="1" Header="Map Information" Margin="5">
                    <ScrollViewer>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Map Information Column -->
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Map Information" FontWeight="Bold" Margin="5,5,5,2"/>
                                <TextBlock x:Name="MapInfoText" Margin="5,2,5,10" TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Vertical Separator -->
                            <Separator Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" 
                                       Margin="5,0,5,0" Width="1"/>

                            <!-- Marker Information Column -->
                            <StackPanel Grid.Column="2" Margin="5,0,0,0">
                                <TextBlock Text="Marker Information" FontWeight="Bold" Margin="5,5,5,2"/>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10" 
                                        Background="White" x:Name="MarkerInfoBorder" Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock x:Name="MarkerNameText" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="MarkerSubtitleText" FontStyle="Italic" Margin="0,0,0,5" Visibility="Collapsed"/>
                                        <Grid x:Name="MarkerDetailsGrid">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Rows will be added dynamically -->
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                <TextBlock x:Name="NoMarkerSelectedText" Text="Click on a marker to view details" 
                                           Margin="5" FontStyle="Italic" Foreground="Gray"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </GroupBox>
            </Grid>

            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch"/>

            <!-- Right Panels Grid - Split horizontally -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Quest List Panel (Top) -->
                <DockPanel Grid.Row="0">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Quests" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="QuestCountText" Text="(0)" Margin="5,0,0,0" Foreground="Gray" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBox DockPanel.Dock="Top" x:Name="QuestSearchBox" Margin="5,0,5,5" 
                             Text="" TextChanged="QuestSearchBox_TextChanged"
                             Background="White" BorderThickness="1" BorderBrush="Gray"
                             ToolTip="Search quests by name or ID"/>
                    <ListBox Name="QuestList" 
                             ItemsSource="{Binding Quests}"
                             SelectionChanged="QuestList_SelectionChanged"
                             Margin="5,0,5,5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" ToolTip="{Binding Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>

                <!-- Horizontal Splitter -->
                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                <!-- Events Panel (Bottom) -->
                <DockPanel Grid.Row="2">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Events" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="EventCountText" Text="(0)" Margin="5,0,0,0" Foreground="Gray" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBox DockPanel.Dock="Top" x:Name="EventSearchBox" Margin="5,0,5,5" 
                             Text="" TextChanged="EventSearchBox_TextChanged"
                             Background="White" BorderThickness="1" BorderBrush="Gray"
                             ToolTip="Search events by name or ID"/>
                    <ListBox Name="EventList" 
                             ItemsSource="{Binding Events}"
                             SelectionChanged="EventList_SelectionChanged"
                             Margin="5,0,5,5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" ToolTip="{Binding Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Grid>

            <GridSplitter Grid.Column="5" HorizontalAlignment="Stretch"/>

            <!-- Far Right Panels Grid - Split horizontally -->
            <Grid Grid.Column="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- BNpc List Panel (Top) -->
                <DockPanel Grid.Row="0">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="BNpcs" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="BNpcCountText" Text="(0)" Margin="5,0,0,0" Foreground="Gray" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBox DockPanel.Dock="Top" x:Name="BNpcSearchBox" Margin="5,0,5,5" 
                             Text="" TextChanged="BNpcSearchBox_TextChanged"
                             Background="White" BorderThickness="1" BorderBrush="Gray"
                             ToolTip="Search NPCs by name or Base ID"/>
                    <ListBox Name="BNpcList" 
                             ItemsSource="{Binding BNpcs}"
                             SelectionChanged="BNpcList_SelectionChanged"
                             Margin="5,0,5,5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" ToolTip="{Binding BNpcName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>

                <!-- Horizontal Splitter -->
                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                <!-- Fates Panel (Bottom) -->
                <DockPanel Grid.Row="2">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Fates" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="FateCountText" Text="(0)" Margin="5,0,0,0" Foreground="Gray" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBox DockPanel.Dock="Top" x:Name="FateSearchBox" Margin="5,0,5,5" 
                             Text="" TextChanged="FateSearchBox_TextChanged"
                             Background="White" BorderThickness="1" BorderBrush="Gray"
                             ToolTip="Search fates by name or ID"/>
                    <ListBox Name="FateList" 
                             ItemsSource="{Binding Fates}"
                             SelectionChanged="FateList_SelectionChanged"
                             Margin="5,0,5,5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" ToolTip="{Binding Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Grid>
        </Grid>

        <!-- Debug Information - Updated with checkbox in header -->
        <Expander Grid.Row="2" Grid.ColumnSpan="3" Margin="5" Background="LightGray" BorderBrush="Gray" BorderThickness="1" IsExpanded="False">
            <Expander.Header>
                <DockPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Expander}}">
                    <TextBlock Text="Debug Information" VerticalAlignment="Center" />
                    <CheckBox x:Name="DebugModeCheckBox" Content="Debug Mode" IsChecked="False" 
                              Click="ToggleDebugMode_Click" Margin="10,0,0,0" VerticalAlignment="Center" />
                </DockPanel>
            </Expander.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" Name="DebugScrollViewer" MaxHeight="250" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="DebugTextBox" IsReadOnly="True" TextWrapping="Wrap" 
                             FontFamily="Consolas" FontSize="12" Background="#FFFCFCFC"
                             VerticalAlignment="Stretch"/>
                </ScrollViewer>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button x:Name="ClearLogButton" Content="Clear Log" Width="80" Margin="0,0,5,0" Click="ClearLogButton_Click"/>
                    <Button x:Name="SaveLogButton" Content="Save Log" Width="80" Margin="0,0,5,0" Click="SaveLogButton_Click"/>
                    <CheckBox x:Name="AutoScrollCheckBox" Content="Auto-scroll" IsChecked="True" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Expander>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Grid.ColumnSpan="3">
            <TextBlock Name="StatusText" Text="Ready - Load FFXIV data to begin"/>
        </StatusBar>
    </Grid>
</Window>