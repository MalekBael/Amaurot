<Window x:Class="map_editor.NpcDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NPC Quest Details" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NPC Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="NpcNameText" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="NpcSubtitleText" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>

            <!-- NPC Info Grid -->
            <Grid x:Name="NpcInfoGrid" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Rows will be added dynamically -->
            </Grid>

            <Separator Margin="0,5,0,10"/>
        </StackPanel>

        <!-- Quest List -->
        <GroupBox Grid.Row="1" Header="Available Quests" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <TextBox Grid.Row="0" x:Name="QuestSearchBox" Margin="5" 
                         Text="" TextChanged="QuestSearchBox_TextChanged"
                         Background="White" BorderThickness="1" BorderBrush="Gray"
                         ToolTip="Search quests by name or ID"/>

                <!-- Quest List -->
                <ListBox Grid.Row="1" x:Name="QuestListBox" Margin="5"
                         SelectionChanged="QuestListBox_SelectionChanged"
                         MouseDoubleClick="QuestListBox_MouseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding}" FontWeight="SemiBold" Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding MapId, StringFormat='Map ID: {0}'}" 
                                               FontSize="10" Foreground="Gray"/>
                                </StackPanel>

                                <!-- Show on Map Button -->
                                <Button Grid.Column="1" 
                                        Width="80" Height="25" 
                                        Content="Show on Map"
                                        Background="LightBlue"
                                        BorderBrush="Blue"
                                        FontSize="10"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        ToolTip="Navigate to this quest on the map"
                                        Click="ShowQuestOnMap_Click"
                                        Tag="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="LightSteelBlue"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Show NPC on Map" Width="120" Height="30" Margin="0,0,10,0" 
                    Click="ShowNpcOnMap_Click" Background="LightGreen" BorderBrush="Green"/>
            <Button Content="Close" Width="80" Height="30" 
                    Click="CloseButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>