<Window x:Class="map_editor.NpcQuestPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NPC Quests" Height="400" Width="315"
        WindowStyle="ToolWindow" ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- NPC Information Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="NpcNameText" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,5" />
            <TextBlock x:Name="NpcLocationText" FontSize="12" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,0,0,5" />
            <TextBlock x:Name="QuestCountText" FontSize="14" FontWeight="SemiBold"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <Separator Grid.Row="1" Margin="0,0,0,10" />

        <!-- Quest List -->
        <GroupBox Grid.Row="2" Header="Available Quests" Margin="0,0,0,10">
            <ListBox x:Name="QuestListBox" MouseDoubleClick="QuestListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Quest Level -->
                            <Border Grid.Column="0" Grid.RowSpan="3"
                                    Background="DarkBlue" CornerRadius="3"
                                    Padding="5,2" Margin="0,0,10,0"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding LevelRequired}"
                                           Foreground="White" FontWeight="Bold"
                                           FontSize="12" HorizontalAlignment="Center" />
                            </Border>

                            <!-- Quest Name -->
                            <TextBlock Grid.Column="1" Grid.Row="0"
                                       Text="{Binding QuestName}"
                                       FontWeight="SemiBold" FontSize="14" />

                            <!-- Quest ID -->
                            <TextBlock Grid.Column="1" Grid.Row="1"
                                       Text="{Binding QuestId, StringFormat='Quest ID: {0}'}"
                                       FontSize="11" Foreground="DarkBlue"
                                       Margin="0,2,0,0" />

                            <!-- Quest Type and Details -->
                            <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Text="{Binding JournalGenre}"
                                           FontSize="11" Foreground="Gray" Margin="0,0,10,0" />
                                <TextBlock Text="[MSQ]" FontSize="11" FontWeight="Bold"
                                           Foreground="Red" Margin="0,0,5,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMainScenario}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="[Feature]" FontSize="11" FontWeight="Bold"
                                           Foreground="Blue">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFeatureQuest}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!-- Experience Reward -->
                            <StackPanel Grid.Column="2" Grid.RowSpan="3"
                                        VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding ExpReward, StringFormat='{}{0:N0} EXP'}"
                                           FontSize="11" Foreground="Green"
                                           HorizontalAlignment="Right" />
                                <TextBlock Text="{Binding GilReward, StringFormat='{}{0:N0} Gil'}"
                                           FontSize="11" Foreground="Gold"
                                           HorizontalAlignment="Right" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- Close Button -->
        <Button Grid.Row="3" Content="Close" Width="80" Height="30"
                HorizontalAlignment="Right" Click="CloseButton_Click" />
    </Grid>
</Window>