<Window x:Class="Amaurot.InstanceContentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instance Content Details" Height="600" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        WindowState="Normal">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="InstanceContentTitleText" FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,5" />
            <TextBlock x:Name="InstanceContentSubtitleText" FontSize="12" Foreground="Gray"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <Separator Grid.Row="1" Margin="0,0,0,10" />

        <!-- Details -->
        <ScrollViewer Grid.Row="2">
            <Grid x:Name="InstanceContentDetailsGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Rows will be added dynamically -->
            </Grid>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="3" Content="Close" Width="80" Height="30"
                HorizontalAlignment="Right" Margin="0,10,0,0" Click="CloseButton_Click" />
    </Grid>
</Window>